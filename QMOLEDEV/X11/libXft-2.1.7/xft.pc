prefix=/usr/local
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include
freetypelibs=-L/usr/local/lib -lfreetype -lz
freetypecflags=-I/usr/local/include/freetype2 -I/usr/local/include
xrenderlibs=-L/usr/local/lib -lXrender -lX11  
xrendercflags= 

Name: Xft
Description: X FreeType library
Version: 2.1.7
Requires: fontconfig
Libs: -L${libdir} -lXft -lX11 ${freetypelibs} ${xrenderlibs}
Cflags: -I${includedir} ${freetypecflags} ${xrendercflags}
