#!/bin/sh

# Build zipfiles for libart_lgpl on Win32, runtime and developer.

ZIP=/tmp/libart_lgpl-2.3.20.zip
DEVZIP=/tmp/libart_lgpl-dev-2.3.20.zip
cd /usr/local

rm $ZIP

DLLDIR=lib
[ -f bin/libart_lgpl_2-2.dll ] && DLLDIR=bin

zip -r $ZIP -@ <<EOF
$DLLDIR/libart_lgpl_2-2.dll
EOF

rm $DEVZIP
zip -r $DEVZIP -@ <<EOF
include/libart-2.0
lib/libart_lgpl_2.dll.a
lib/art_lgpl_2.lib
lib/pkgconfig/libart-2.0.pc
EOF
