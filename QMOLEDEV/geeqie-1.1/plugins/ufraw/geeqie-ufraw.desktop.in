[Desktop Entry]
Version=1.0
Type=Application
_Name=UFRaw Batch

# call the helper script on each file individually 
# - this allows a better controll over processing
Exec=geeqie-ufraw %f

# show only if ufraw is installed
TryExec=ufraw

# Desktop files that are usable only in Geeqie should be marked like this:
Categories=X-Geeqie;
OnlyShowIn=X-Geeqie;

# Show in menu "Edit"
X-Geeqie-Menu-Path=EditMenu/EditSection

# It can be made verbose
X-Geeqie-Verbose=true

MimeType=application/x-ufraw;image/x-dcraw;

Icon=ufraw
